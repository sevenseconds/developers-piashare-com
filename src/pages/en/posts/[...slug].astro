---
import MicroBlogLayout from '../../../layouts/MicroBlogLayout.astro';
import { getCollection, getEntry, render } from 'astro:content';
import { generateTOC } from '../../../utils/toc.js';

export async function getStaticPaths() {
  const blogPosts = await getCollection('blog', ({ data }) => {
    return data.lang === 'en';
  });

  return blogPosts.map(post => ({
    params: { 
      slug: post.id.replace('en/', '') 
    },
    props: { 
      post 
    },
  }));
}

const { post } = Astro.props;
const { Content, headings } = await render(post);
const toc = generateTOC(headings);
---

<MicroBlogLayout title={post.data.title} showTOC={toc.hasContent} tocItems={toc.items}>
	<article class="max-w-4xl mx-auto">
		<!-- Add spacing for header controls -->
		<div class="h-16 sm:h-20"></div>
		
		<header class="mb-8">
			<h1 class="text-4xl sm:text-5xl font-bold text-gray-900 dark:text-white mb-6">
				{post.data.title}
			</h1>
			
			<div class="flex items-center gap-4 text-lg sm:text-xl text-gray-500 dark:text-gray-400 mb-6">
				<span>{post.data.date.toLocaleDateString('en-US', { 
					year: 'numeric', 
					month: 'short', 
					day: 'numeric' 
				})}</span>
				<span>{post.data.readTime}</span>
			</div>

			<div class="flex flex-wrap gap-2">
				{post.data.tags.map((tag) => {
					const tagSlug = tag.toLowerCase().replace(/\s+/g, '-');
					return (
						<a 
							href={`/en/tags/${tagSlug}`}
							class="px-4 py-2 rounded-full text-base font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200 hover:bg-blue-200 dark:hover:bg-blue-800 transition-colors"
						>
							{tag}
						</a>
					);
				})}
			</div>
		</header>

		{post.data.image && (
			<div class="mb-8">
				<img 
					src={post.data.image} 
					alt={post.data.title} 
					class="w-full h-64 object-cover rounded-lg"
				/>
			</div>
		)}

		<div class="text-gray-900 dark:text-gray-100">
			{post.data.subtitle && (
				<p class="text-2xl sm:text-3xl text-gray-600 dark:text-gray-300 mb-10 leading-relaxed">
					{post.data.subtitle}
				</p>
			)}

			<div class="prose prose-lg sm:prose-xl dark:prose-invert max-w-none
				prose-headings:text-gray-900 dark:prose-headings:text-white
				prose-p:text-lg prose-p:sm:text-xl prose-p:leading-relaxed
				code-snippet-fix">
				<Content />
			</div>
		</div>

		<div class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-700">
			<a href="/en/" class="text-blue-600 dark:text-blue-400">‚Üê Back to all posts</a>
		</div>
	</article>
</MicroBlogLayout>

<style>
.prose.code-snippet-fix pre {
	background-color: #f3f4f6; /* bg-gray-100 */
	color: #111827; /* text-gray-900 */
	overflow-x: auto;
	font-size: 0.875rem; /* text-sm */
	padding: 1rem;
	border-radius: 0.5rem;
	border: 1px solid #e5e7eb; /* border-gray-200 */
}

.dark .prose.code-snippet-fix pre {
	background-color: #1f2937; /* bg-gray-800 */
	color: #f9fafb; /* text-gray-100 */
	border-color: #374151; /* border-gray-700 */
}

.prose.code-snippet-fix code {
	font-size: 1rem;
	background-color: #f3f4f6;
	color: #111827;
	padding: 0.125rem 0.5rem;
	border-radius: 0.25rem;
	word-break: break-word;
}

.dark .prose.code-snippet-fix code {
	background-color: #1f2937;
	color: #f9fafb;
}

.prose.code-snippet-fix pre code {
	background-color: transparent;
	padding: 0;
	border-radius: 0;
	color: inherit;
}
</style>