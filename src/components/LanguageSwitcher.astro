---
const currentPath = Astro.url.pathname;
const isThaiPage = currentPath.startsWith('/th');
---

<div class="flex items-center gap-2 text-sm">
	<a 
		href={isThaiPage ? currentPath.replace('/th', '') || '/' : currentPath}
		class={`px-2 py-1 rounded transition-colors ${!isThaiPage ? 'bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200' : 'text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-100'}`}
	>
		EN
	</a>
	<span class="text-gray-400 dark:text-gray-600">|</span>
	<a 
		href={isThaiPage ? currentPath : `/th${currentPath === '/' ? '' : currentPath}`}
		class={`px-2 py-1 rounded transition-colors ${isThaiPage ? 'bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200' : 'text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-100'}`}
	>
		ไทย
	</a>
</div>