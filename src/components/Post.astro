
---
export interface Props {
	title: string;
	subtitle?: string;
	image?: string;
	tags?: string[];
	date?: string;
	readTime?: string;
	author?: string;
	href?: string;
	showThumbnail?: boolean;
}

const { title, subtitle, image, tags = [], date, readTime, author, href = "#", showThumbnail = true } = Astro.props;
---

<div class="border border-gray-200 dark:border-gray-700 rounded-lg p-4 sm:p-6 mb-4 hover:shadow-lg dark:hover:shadow-gray-800/50 transition-shadow bg-white dark:bg-gray-800">
	<!-- Mobile: Stack vertically, Desktop: Side by side -->
	<div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-4">
		<!-- Main content area -->
		<div class="flex items-start gap-3 sm:gap-4 flex-1">
			{image && showThumbnail && (
				<div class="w-16 h-16 sm:w-20 sm:h-20 md:w-24 md:h-24 flex-shrink-0 relative">
					<img 
						src={image} 
						alt={title} 
						class="w-full h-full object-cover rounded-lg"
						onError="this.style.display='none'; this.nextElementSibling.style.display='flex';"
					/>
					<div class="absolute inset-0 bg-gray-200 dark:bg-gray-700 rounded-lg items-center justify-center hidden">
						<svg class="w-6 h-6 sm:w-8 sm:h-8 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
						</svg>
					</div>
				</div>
			)}
			
			<div class="flex-1 min-w-0">
				<!-- Title -->
				<div class="mb-2">
					<h2 class="text-lg sm:text-xl md:text-2xl font-bold text-gray-900 dark:text-white line-clamp-2">
						<a href={href} class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
							{title}
						</a>
					</h2>
				</div>

				<!-- Meta info (author, date, read time) -->
				<div class="flex items-center gap-2 sm:gap-3 text-sm sm:text-base text-gray-500 dark:text-gray-400 mb-3">
					{author && (
						<span class="flex items-center gap-1">
							<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
							</svg>
							{author}
						</span>
					)}
					{date && (
						<span class="flex items-center gap-1">
							<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
							</svg>
							{date}
						</span>
					)}
					{readTime && (
						<span class="flex items-center gap-1">
							<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
							</svg>
							{readTime}
						</span>
					)}
				</div>

				<!-- Subtitle -->
				{subtitle && (!image || !showThumbnail) && (
					<div class="mb-3 sm:mb-4">
						<p class="text-base sm:text-lg text-gray-600 dark:text-gray-300 line-clamp-2">
							{subtitle}
						</p>
					</div>
				)}

				<!-- Tags -->
				{tags.length > 0 && (
					<div class="flex flex-wrap gap-2 sm:gap-2">
						{tags.map(tag => (
							<span class="inline-flex items-center px-2.5 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200">
								{tag}
							</span>
						))}
					</div>
				)}
			</div>
		</div>

		<!-- Subtle read more link -->
		<div class="mt-3 sm:mt-0 sm:flex-shrink-0 sm:self-end">
			<a href={href} class="text-sm sm:text-base text-gray-500 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors inline-flex items-center gap-1">
				Read more
				<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
				</svg>
			</a>
		</div>
	</div>
</div>
