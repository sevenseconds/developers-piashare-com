<!-- Desktop Sidebar (Full) - Show text when there's enough space -->
<aside class="fixed left-0 top-0 h-full w-64 bg-white dark:bg-black border-r border-gray-200 dark:border-gray-800 hidden xl:block overflow-y-auto">
  <div class="p-4">
    <!-- Logo/Brand -->
    <div class="mb-8 p-3">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white">PiaShare</h2>
    </div>
    
    <!-- Navigation -->
    <nav class="space-y-1">
      <a href="/" class="flex items-center space-x-4 p-3 rounded-full hover:bg-gray-100 dark:hover:bg-gray-900 transition-all duration-200 group max-w-fit">
        <svg class="w-7 h-7 text-gray-700 dark:text-gray-300" fill="currentColor" viewBox="0 0 24 24">
          <path d="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z"/>
        </svg>
        <span class="text-xl font-normal text-gray-900 dark:text-white">Home</span>
      </a>
      
      <a href="/tutorials" class="flex items-center space-x-4 p-3 rounded-full hover:bg-gray-100 dark:hover:bg-gray-900 transition-all duration-200 group max-w-fit">
        <svg class="w-7 h-7 text-gray-700 dark:text-gray-300" fill="currentColor" viewBox="0 0 24 24">
          <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"/>
        </svg>
        <span class="text-xl font-normal text-gray-900 dark:text-white">Tutorials</span>
      </a>
      
      <a href="/tips" class="flex items-center space-x-4 p-3 rounded-full hover:bg-gray-100 dark:hover:bg-gray-900 transition-all duration-200 group max-w-fit">
        <svg class="w-7 h-7 text-gray-700 dark:text-gray-300" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
        </svg>
        <span class="text-xl font-normal text-gray-900 dark:text-white">Tips</span>
      </a>
    </nav>
  </div>
</aside>

<!-- Medium Screen Sidebar (Icons Only) - When space is limited -->
<aside class="fixed left-0 top-0 h-full w-20 bg-white dark:bg-black border-r border-gray-200 dark:border-gray-800 hidden lg:block xl:hidden overflow-y-auto">
  <div class="p-2">
    <!-- Logo/Brand (Icon only) -->
    <div class="mb-8 p-3 flex justify-center">
      <div class="w-10 h-10 bg-blue-500 rounded-full flex items-center justify-center">
        <span class="text-white font-bold text-lg">P</span>
      </div>
    </div>
    
    <!-- Navigation (Icons only) -->
    <nav class="space-y-2">
      <a href="/" class="flex items-center justify-center p-3 rounded-full hover:bg-gray-100 dark:hover:bg-gray-900 transition-all duration-200 group" title="Home">
        <svg class="w-7 h-7 text-gray-700 dark:text-gray-300" fill="currentColor" viewBox="0 0 24 24">
          <path d="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z"/>
        </svg>
      </a>
      
      <a href="/tutorials" class="flex items-center justify-center p-3 rounded-full hover:bg-gray-100 dark:hover:bg-gray-900 transition-all duration-200 group" title="Tutorials">
        <svg class="w-7 h-7 text-gray-700 dark:text-gray-300" fill="currentColor" viewBox="0 0 24 24">
          <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"/>
        </svg>
      </a>
      
      <a href="/tips" class="flex items-center justify-center p-3 rounded-full hover:bg-gray-100 dark:hover:bg-gray-900 transition-all duration-200 group" title="Tips">
        <svg class="w-7 h-7 text-gray-700 dark:text-gray-300" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
        </svg>
      </a>
    </nav>
  </div>
</aside>